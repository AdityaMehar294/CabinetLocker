
<form action="<%= url_for(controller: 'docs', action: 'create') %>" method="post">
  <label for="doc_title">Title:</label>
  <input type="text" id="doc_title" name="doc[title]" value="<%= @doc.title %>" required>

  <label for="doc_content">Content:</label>
  <textarea id="doc_content" name="doc[content]" required><%= @doc.content %></textarea>

  <input type="submit" value="Create">
</form>
